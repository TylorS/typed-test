{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@typed/tests/*": ["./source/tests/*"]
    },
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "lib"
  },
  "include": ["./source/**/*.ts"],
  "tests": [
    "./source/**/*.test.ts"
  ]
}
